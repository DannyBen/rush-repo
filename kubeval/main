#!/usr/bin/env bash
source ../common.sh

say "identifying latest version for instrumenta/kubeval"
version=$(get_github_release_version instrumenta/kubeval)
say "latest version is $version"

if ! is_installed kubeval ; then
  say "installing kubeval (github)"
  curl -sL "https://github.com/instrumenta/kubeval/releases/download/$version/kubeval-linux-amd64.tar.gz" | tar -xzv kubeval

  chmod +x kubeval
  sudo mv kubeval /usr/local/bin/

  kubeval --version
  say "kubeval installation complete"

else
  say "installed version is also $version, no update needed."

fi
