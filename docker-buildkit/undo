#!/usr/bin/env bash
source ../common.sh

needs jq

say "disabling docker buildkit"
file=/etc/docker/daemon.json
if [[ -f "$file" ]]; then
  json=$(<$file)
else
  json="{}"
fi

new_json=$(jq '.features.buildkit = false' <<< "$json")
echo "$new_json" | sudo tee "$file" > /dev/null

say "restarting docker service"
sudo service docker restart
