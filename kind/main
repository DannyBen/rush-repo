#!/usr/bin/env bash
echo "Identifying latest version"
version=$(curl -s https://api.github.com/repos/kubernetes-sigs/kind/releases/latest | grep "tag_name" | cut -d : -f 2,3 | tr -d \"\ ,v)

echo "Latest version is $version"

echo "Comparing with installed version (if any)"

installed() {
  hash kind 2> /dev/null && kind --version | grep "$version" > /dev/null 2>&1
}

if ! installed ; then
  echo "Downloading..."
  sudo curl -L "https://github.com/kubernetes-sigs/kind/releases/download/v$version/kind-linux-amd64" -o /usr/local/bin/kind
  sudo chmod +x /usr/local/bin/kind
  echo "Installed in /usr/local/bin/kind"

else
  echo "Installed version is also $version - no update needed"

fi

kind --version
echo "Goodbye"