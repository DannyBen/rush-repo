#!/usr/bin/env bash
source ../common.sh

version=3.0.1

needs rbenv
source ~/.bashrc.d/rbenv.bashrc  # in case rbenv was not installed yet

say "installing ruby $version with rbenv"
rbenv install -s "$version"
rbenv global "$version"

say "copying configuration files"
cp .gemrc ~/
mkdir -p ~/.bundle/
cp config ~/.bundle/
ruby -v