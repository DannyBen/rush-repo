#!/usr/bin/env bash
source ../common.sh

version=2.7.0

if ! command_exist rvm ; then
  attention "rvm is not installed"
  attention "run 'rush get $REPO:rvm' first and try again"
  exit 1
fi

if ! is_installed ruby ; then
  rvm install "$version"

  say "copying ~/.gemrc"
  cp .gemrc ~/.gemrc

  attention "please run:"
  attention "rvm use $version --default && gem install bundler"

else
  say "installed version is also $version, no update needed."

fi

